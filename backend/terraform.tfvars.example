# backend/terraform.tfvars.example
# Copy this file to terraform.tfvars and update with your actual values

# AWS Region where backend resources will be created
region = "us-east-1"

# S3 Bucket Name (must be globally unique across ALL AWS accounts)
# Recommendation: <company>-<team>-terraform-state or <your-name>-terraform-state
# Example: acme-devops-terraform-state
bucket_name = "project-terraform-state"

# DynamoDB Table Name (must be unique within your AWS account)
# Recommendation: Keep it simple and consistent
dynamodb_table = "project-terraform-locks"

# Environment tag (use "shared" since this is shared infrastructure)
environment = "shared"

